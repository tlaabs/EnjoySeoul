<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/event_list_item_rectangle"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:paddingLeft="5dp"
            >

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                />

        </RelativeLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:background="#ffffff"
            android:paddingLeft="10dp"
            >
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                    <TextView
                        android:id="@+id/alert_genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:background="@drawable/no_stroke_rectangle"
                        android:layout_marginRight="4dp"

                        />

                    <TextView
                        android:id="@+id/alert_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:padding="2dp"
                        android:textColor="#ffffff"
                        android:background="@drawable/no_stroke_rectangle"
                        android:textStyle="bold"

                        />

            </LinearLayout>
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017 동작청소년문화의집 교육문화프로그램-발레"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:layout_weight="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/txt_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017-03-18~2017-10-21"
                android:textSize="12dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
